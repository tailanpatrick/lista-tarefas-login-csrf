{
	"version": 2,
	"builds": [
		{
			"src": "frontend/package.json",
			"use": "@vercel/static-build",
			"config": { "distDir": "build" }
		},
		{
			"src": "backend/src/server.ts",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "backend/src/server.ts"
		},
		{
			"src": "/(.*)",
			"dest": "frontend/$1"
		}
	]
}
