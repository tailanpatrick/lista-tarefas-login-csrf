{
	"builds": [
		{
			"src": "backend/src/server.ts",
			"use": "@vercel/node"
		}
	],
	"routes": [
		{
			"src": "/api/(.*)",
			"dest": "backend/src/server.ts"
		},
		{
			"src": "/(.*)",
			"dest": "/index.html"
		}
	],
	"installCommand": "npm install && npm run install-frontend-deps",
	"buildCommand": "npm run build-frontend",
	"public": true,
	"outputDirectory": "frontend/dist"
}
